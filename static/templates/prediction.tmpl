<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href='https://fonts.googleapis.com/css?family=PT Sans' rel='stylesheet'>
    <title>Погода</title>
    <link rel="stylesheet" type="text/css" href="http://127.0.0.1:8080/static/css/prediction.css">
    <link rel="stylesheet" type="text/css" href="http://127.0.0.1:8080/static/css/global.css">
  </head>
  <body style="margin:0;">
  <form method="post">
    <button class="clear_btn" formaction="http://127.0.0.1:8080/statuschange?operation=delete&id={{.Prediction.Prediction_id}}" type="submit" style="cursor:pointer; border:none; padding:0px; z-index:2; background:none; border-radius:25px;">
          <label class="btn_lbl" style="cursor: pointer;">Очистить корзину</label>
          <div class="clear_btn_bg"></div>
    </button>
  </div>
<div class="prediction">
  <span  class="prediction_title">Корзина прогнозов</span>
  <div class="prediction_header">
      <button type="submit" class="save_bg" style="cursor:pointer; z-index:2;" formaction="http://127.0.0.1:8080/statuschange?operation=save&id={{.Prediction.Prediction_id}}">
        <div  class="save_lbl">Сохранить</div>
        <div class="save_bg coolfade" style="right:0px; z-index: -1;"></div>
      </button>
    <div class="day_amount">
    {{ if .Draft }}
      <div class="day_amount_bg"></div><input name="amount" class="day_amount_lbl">
    {{ else }}
      <div class="day_amount_bg"></div><input name="amount" class="day_amount_lbl" value="{{ .Prediction.Prediction_amount }}">
    {{ end }}
    </div>
    <span  class="pred_amount">Количество предсказаний:</span>
    <span  class="meas">измерения</span>
    <div class="calc_type">
      <div class="calc_bg"></div>
      {{ if .Draft }}
        <input name="window" class="calc_lbl">
    {{ else }}
      <input name="window" class="calc_lbl" value="{{.Prediction.Prediction_window}}">
    {{ end }}
    </div><span  class="calc_window">Окно расчета:</span>
  </div>
  <div class="forecasts">
    {{ range .Pr_forecasts }}
    <div class=forecast>
      <div class = "forecast_card" onclick="location.href='http://127.0.0.1:8080/details?id={{.Forecast.Forecast_id}}'" style="cursor:pointer">
        <div class="forecast_card_bg" style="background-color: rgba({{ .Forecast.Color }})"></div>
        {{ if eq .Forecast.Img_url ""}}
          <div class="forecast_card_img"></div>
        {{else}}
          <div class="forecast_card_img" style="background-image:url({{.Forecast.Img_url}})"></div>
        {{end}}
        <div class="forecast_card_fade" style="background-image:linear-gradient(90deg, rgba({{ .Forecast.Color }}) 0%,rgba(255, 255, 255, 0) 100%)"></div>
        <div class=card_content>
          <span  class="forecast_card_title">{{ .Forecast.Short }}</span>
          <span  class="desc">{{ .Forecast.Descr }}</span>
        </div>
      </div>
      <div class=measures>
          <div class="cell_bg"></div>
          {{ if eq .Input "" }}
            <input name="values" class="cell_lbl">
          {{ else }}
            <input name="values" class="cell_lbl" value="{{.Input}}">
          {{ end }}
          <input type="hidden" name="ids" class="cell_lbl" value="{{.Forecast.Forecast_id}}">
      </div>
    </div>
    {{ end }}
  </div>
</div>
</form>
<div class="header_component">
      <div class="header_bg"></div>
      <div class=logo>
        <button class="logo_btn" onclick="location.href='http://127.0.0.1:8080/forecasts'"></button>
        <span  class="logo_lbl">Погода</span>
        <div class="logo_img"></div>
      </div>
    </div>

</body>
</html>